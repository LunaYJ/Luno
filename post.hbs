{{!< default}}

{{#post}}

  <article class="post-container post-container--single">

    <header class="post-header">
      <div class="post-meta">
        <time
                datetime="{{date format="DD MMM YYYY"}}"
                class="post-meta__date date">{{date format="DD MMM YYYY"}}
        </time> &#8226; <span class="post-meta__tags tags">{{tags prefix=" "}}</span>
        <!--<span class="post-meta__author author"><img src="{{primary_author.profile_image}}" alt="profile image for {{author.name}}" class="avatar post-meta__avatar" /> by {{author.name}}</span>-->
      </div>
      <h1 class="post-title">{{{title}}}</h1>
    </header>
    {{#if feature_image}}
      <figure class="post-full-image">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img
            srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 800px) 400px,
                            (max-width: 1170px) 700px,
                            1400px"
            src="{{img_url feature_image size="xl"}}"
            alt="{{title}}"
        />
      </figure>
    {{/if}}
    <section class="{{post_class}}">
      {{content}}
    </section>

    {{> donate}}

    {{> share}}

  </article>

  {{> read-more}}
  {{> comments}}

{{/post}}
